{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://physical-ai-textbook.dev/schemas/module-metadata.json",
  "title": "Module Metadata Schema",
  "description": "Validates frontmatter for module overview pages",
  "type": "object",
  "required": [
    "title",
    "description",
    "sidebar_position",
    "module_id",
    "week_range",
    "learning_outcomes",
    "estimated_time"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100,
      "description": "Full module name"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "maxLength": 500,
      "description": "Module overview (2-3 sentences)"
    },
    "sidebar_position": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5,
      "description": "Module order in navigation"
    },
    "module_id": {
      "type": "string",
      "enum": [
        "module-0",
        "module-1",
        "module-2",
        "module-3",
        "module-4",
        "capstone"
      ],
      "description": "Unique module identifier"
    },
    "week_range": {
      "type": "string",
      "pattern": "^Week [1-9]|1[0-3]$|^Weeks [1-9]|1[0-3]-[1-9]|1[0-3]$",
      "description": "Week span in 13-week course (e.g., 'Week 13' or 'Weeks 3-5')"
    },
    "learning_outcomes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 10,
        "maxLength": 200,
        "pattern": "^(Explain|Derive|Implement|Apply|Analyze|Evaluate|Create|Design|Compare|Demonstrate)"
      },
      "minItems": 3,
      "maxItems": 7,
      "description": "High-level module objectives (active voice)"
    },
    "capstone_integration": {
      "type": "string",
      "minLength": 50,
      "maxLength": 300,
      "description": "How module contributes to capstone project"
    },
    "estimated_time": {
      "type": "number",
      "minimum": 6,
      "maximum": 40,
      "description": "Total study hours for entire module"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 30
      },
      "minItems": 5,
      "maxItems": 15,
      "uniqueItems": true,
      "description": "SEO keywords for module"
    }
  },
  "additionalProperties": false
}
